<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="xyz.ryujpn.mymessenger">

    <uses-permission android:name="android.permission.INTERNET "/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppRegister">
        <activity
                android:name=".ChatLogActivity"
                android:theme="@style/AppTheme"
                android:parentActivityName=".DrawerMainActivity"
                android:windowSoftInputMode="adjustResize"
        >

        </activity>
        <activity
                android:name=".LoginActivity"
                android:label="@string/title_activity_login">
        </activity>
        <activity
                android:name=".NewpostActivity"
                android:label="@string/drawer_title_NewPost"
                android:parentActivityName=".DrawerMainActivity"
                android:theme="@style/AppTheme"
                android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
                android:name=".DrawerMainActivity"
                android:label="@string/title_activity_drawer_main"
                android:theme="@style/Newpost">
        </activity>
        <activity
                android:name=".MyListActivity"
                android:label="@string/MyTodoListActivity"
                android:parentActivityName=".DrawerMainActivity"
                android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".RegisterActivity"
                  android:windowSoftInputMode="adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>